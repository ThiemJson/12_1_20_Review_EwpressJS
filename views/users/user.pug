extends ../layouts/common.pug

block content
    .container
        h1 Users 
        a(href="users/create") Create Users
        form(action="/users/search", method="get")
            label(for="input-users") Name
            input#input-users(type="text", name="name")
            button(type="submit") Submit

        
        table.table
            tr  
                th Avatar
                th Name
                th Phone
                th Action
            each user in users
                tr 
                    td  
                        img(src=user.avatar style="width: 32")
                    td= user.name
                    td= user.phone
                    td
                        a.btn.btn-light(href="/users/" + user.did) Views